<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvOgrenciNo"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvOgrenciAd"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOgrenciNo"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvOgrenciSoyad"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOgrenciAd"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvOgrenciOkul"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOgrenciSoyad"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:text="TextView"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivDurumResim"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20dp"
            android:src="@drawable/avatar"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tvDurumAdSoyad"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivDurumResim"
            android:layout_toEndOf="@+id/ivDurumResim"
            android:text="TextView" />
        <TextView
            android:id="@+id/tvDurumGuncellemeTarihi"
            android:layout_below="@+id/tvDurumAdSoyad"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/ivDurumResim"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="#76A69C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Son GÃ¼ncellemeler" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/gridViewDurumlar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
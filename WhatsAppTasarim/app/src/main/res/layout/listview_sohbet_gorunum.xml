<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivSohbetResim"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/avatar"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivSohbetResim">

        <TextView
            android:id="@+id/tvSohbetAdSoyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ad Soyad"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSohbetAciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSohbetAdSoyad"
            android:layout_marginTop="15dp"
            android:text="Açıklama"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvSohbetTarih"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:text="01.01.2018"
        android:textSize="18sp" />
</RelativeLayout>
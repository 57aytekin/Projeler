<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dadada">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvArananKanAdSoyad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Aytekin Çömez"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvArananKanGrub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvArananKanAdSoyad"
                android:layout_alignStart="@+id/tvArananKanAdSoyad"
                android:layout_marginTop="10dp"
                android:text="AB+"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvArananKanMekan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvArananKanGrub"
                android:layout_alignStart="@id/tvArananKanAdSoyad"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tvArananKanMekan"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="10sp"
                android:text="İletişim bilgileri için tıklayınız." />

            <TextView
                android:id="@+id/tvArananKanZaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tvArananKanAdSoyad"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="12sp"
                android:text="19.10.2018"
                android:textStyle="bold" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
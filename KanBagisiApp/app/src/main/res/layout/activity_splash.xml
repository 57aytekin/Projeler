<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.SplashActivity">

    <TextView
        android:id="@+id/tvBirKan"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="#c5220618"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/tvBirInsan"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:background="#c5220618"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="Bir İnsana Can Ver"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvBirKan" />

    <TextView
        android:id="@+id/tvElEle"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/eagle_lake"
        android:text="El ele verelim hayat kurtaralım"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</RelativeLayout>
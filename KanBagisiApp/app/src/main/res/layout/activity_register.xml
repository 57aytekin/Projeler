<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundcolor"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <TextView
        android:id="@+id/tvRegisterLogo"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:text="ÜYE OL"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/srollview"
        android:layout_below="@+id/tvRegisterLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etRegisterEmail"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:hint="E-Mail"
                android:textColorHint="#949393"
                android:gravity="center"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etRegisterAd"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegisterEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Ad"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#949393" />
            <EditText
                android:id="@+id/etRegisterSoyad"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegisterAd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Soyad"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#949393" />
            <EditText
                android:id="@+id/etRegisterIl"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegisterSoyad"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:gravity="center"
                android:hint="İl"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#949393" />
            <EditText
                android:id="@+id/etRegisterIlce"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegisterIl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:gravity="center"
                android:hint="İlçe"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#949393" />
            <EditText
                android:id="@+id/etRegisterSifre"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegisterIlce"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Şifre"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#949393" />

            <EditText
                android:id="@+id/etRegisterSifreTekrar"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegisterSifre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Şifre Tekrar"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#949393" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnRegisterUyeOl"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/srollview"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:text="Üye Ol" />
</RelativeLayout>
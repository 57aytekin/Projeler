<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.YemekDetayActivity">



    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivYemekDetayResim"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tvYemekDetayBaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivYemekDetayResim"
            android:textSize="24sp"
            android:layout_margin="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvYemekDetayBaslik"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="0dp"
            android:text="Kategori" />

        <TextView
            android:id="@+id/tvYemekDetayKategoriAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvYemekDetayBaslik"
            android:layout_alignEnd="@id/tvYemekDetayBaslik"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="TextView"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="Pişirme Süresi" />

        <TextView
            android:id="@+id/tvYemekDetayPisirmeSuresi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvYemekDetayKategoriAd"
            android:layout_alignEnd="@id/tvYemekDetayBaslik"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="TextView"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="Hazırlama Süresi" />

        <TextView
            android:id="@+id/tvYemekDetayHazirlamaSuresi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvYemekDetayPisirmeSuresi"
            android:layout_alignEnd="@id/tvYemekDetayBaslik"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="TextView"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="Kişi Sayısı" />

        <TextView
            android:id="@+id/tvYemekDetayKisiSayisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvYemekDetayHazirlamaSuresi"
            android:layout_alignEnd="@id/tvYemekDetayBaslik"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="TextView"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="Zorluk Seviyesi" />

        <TextView
            android:id="@+id/tvYemekDetayZorlukSeviyesi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvYemekDetayKisiSayisi"
            android:layout_alignEnd="@id/tvYemekDetayBaslik"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="TextView"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="Malzemeler" />

        <LinearLayout
            android:id="@+id/linearMalzemeler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textView7"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

        </LinearLayout>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearMalzemeler"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="Alerjenler" />
        <LinearLayout
            android:id="@+id/linearAlerjenler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textView8"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

        </LinearLayout>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearAlerjenler"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="Hazırlanışı" />
        <TextView
            android:id="@+id/tvYemekDetayHazirlanisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_alignStart="@+id/tvYemekDetayBaslik"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="TextView" />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
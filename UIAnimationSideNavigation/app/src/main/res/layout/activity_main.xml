<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:translationX="-280dp"
        android:id="@+id/mainmenu"
        android:orientation="vertical"
        android:background="#1E2E61"
        android:layout_width="288dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/userpicbig"
            android:src="@drawable/userpicbig"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user"
            android:text="Agga Risky"
            android:textColor="#FFF"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/country"
            android:text="Indenosia"
            android:textColor="#FFF"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/exp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="44dp"
            android:gravity="left"
            android:text="Explore"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#FFF"
            android:background="@drawable/bgbtnmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/ao"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="44dp"
            android:gravity="left"
            android:text="AddOns"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#485778"
            android:background="#1E2E61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/msg"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="44dp"
            android:gravity="left"
            android:text="Messages"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#485778"
            android:background="#1E2E61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/st"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="44dp"
            android:gravity="left"
            android:text="Settings"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#485778"
            android:background="#1E2E61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/so"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:layout_marginLeft="44dp"
            android:text="Sign Out"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#485778"
            android:background="#1E2E61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <RelativeLayout
        android:translationX="-280dp"
        android:id="@+id/maincontent"
        android:layout_width="416dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnMenu"
            android:background="@drawable/userpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/userhome"
            android:text="Agga Risky"
            android:textColor="#181C34"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/countryhome"
            android:text="Indenosia"
            android:textColor="#181C34"
            android:layout_below="@+id/userhome"
            android:layout_alignStart="@id/userhome"
            android:layout_marginLeft="15dp"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/exphome"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/btnMenu"
            android:text="Explore"
            android:textColor="#181C34"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/solving"
            android:text="Solving your problems"
            android:textColor="#181C34"
            android:layout_below="@+id/exphome"
            android:layout_alignStart="@id/exphome"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/solving"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivbtc"
                    android:src="@drawable/bitcoin"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/solving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="BitCoin"
                    android:textSize="16sp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#181C34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivco"
                    android:src="@drawable/co"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/solving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="BitCoin"
                    android:textSize="16sp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#181C34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivproet"
                    android:src="@drawable/proet"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/solving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="BitCoin"
                    android:textSize="16sp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#181C34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
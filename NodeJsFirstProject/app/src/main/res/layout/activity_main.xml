<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/etMesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Mesajınız"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnGonder"
        app:layout_constraintStart_toStartOf="@+id/btnGonder"
        app:layout_constraintTop_toBottomOf="@+id/tvDurum" />

    <Button
        android:id="@+id/btnBaglan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="17dp"
        android:text="Bağlan"
        app:layout_constraintBottom_toTopOf="@+id/tvDurum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGonder"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="231dp"
        android:text="Gönder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMesaj" />

    <TextView
        android:id="@+id/tvDurum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/etMesaj"
        app:layout_constraintStart_toStartOf="@+id/btnBaglan"
        app:layout_constraintTop_toBottomOf="@+id/btnBaglan" />
</android.support.constraint.ConstraintLayout>